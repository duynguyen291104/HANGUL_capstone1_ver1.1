{
  "name": "Korean TOPIK 1 Learning App",
  "short_name": "TOPIK Learn",
  "description": "Ứng dụng học từ vựng TOPIK 1 với flashcards, games và spaced repetition",
  "start_url": "/",
  "display": "standalone",
  "background_color": "#ffffff",
  "theme_color": "#3b82f6",
  "orientation": "portrait-primary",
  "scope": "/",
  "lang": "vi-VN",
  "categories": ["education", "productivity"],
  "icons": [
    {
      "src": "/icon-192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "/icon-512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "maskable any"
    }
  ],
  "shortcuts": [
    {
      "name": "Flashcards",
      "short_name": "Flashcards",
      "description": "Học từ vựng với flashcards thông minh",
      "url": "/flashcards",
      "icons": [{ "src": "/icon-192.png", "sizes": "192x192" }]
    },
    {
      "name": "Games",
      "short_name": "Games", 
      "description": "Chơi game học từ vựng",
      "url": "/games",
      "icons": [{ "src": "/icon-192.png", "sizes": "192x192" }]
    },
    {
      "name": "Progress",
      "short_name": "Progress",
      "description": "Xem tiến độ học tập", 
      "url": "/progress",
      "icons": [{ "src": "/icon-192.png", "sizes": "192x192" }]
    }
  ],
  "features": [
    "Cross Platform",
    "Background Sync", 
    "Offline Support"
  ],
  "share_target": {
    "action": "/import",
    "method": "GET",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  },
  "launch_handler": {
    "client_mode": "focus-existing"
  },
  "handle_links": "preferred",
  "prefer_related_applications": false,
  "file_handlers": [
    {
      "action": "/import",
      "accept": {
        "text/tab-separated-values": [".tsv"],
        "text/csv": [".csv"],
        "text/plain": [".txt"]
      }
    }
  ]
}